<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
</head>
<body>
    <!-- #region NAVBAR -->

    <nav class="navbar navbar-expand-sm bg-dark" style="margin-bottom: 20px;">
        <a class="navbar-brand" asp-controller="Home" asp-action="Index"><i class="fas fa-compact-disc fa-2x navbar-logo"></i></a>

        <div class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item navbar-item">
                    <a class="nav-link navbar-item-color" asp-controller="Home" asp-action="Hot">Hot</a>
                </li>
                <li class="nav-item navbar-item">
                    <a class="nav-link navbar-item-color" asp-controller="Home" asp-action="Recommended">Recommended</a>
                </li>
                <li class="nav-item navbar-item">
                    <a class="nav-link navbar-item-color" asp-controller="Home" asp-action="Bestsellers">Bestsellers</a>
                </li>
            </ul>
        </div>

        <form class="form-inline align" asp-controller="home" asp-action="Search" asp-route-input=input>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                </div>
                <input id="input" name="input" type="search" class="form-control" placeholder="Search...">
            </div>
        </form>

        <div class="form-inline align">
            <ul class="navbar-nav">
                <li class="nav-item navbar-cart">
                    <a class="nav-link navbar-item-color" asp-controller="home" asp-action="Cart">Cart: <i class="fas fa-shopping-cart"></i></a>
                </li>
            </ul>
        </div>
    </nav>
    <!-- #endregion -->

    <!-- #region BODY -->
    <div>
        @RenderBody()
    </div>    
    <!-- #endregion -->

    <!-- #region FOOTER -->
    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <span class="text-muted"><i class="far fa-copyright"> Mateusz Jaroszewski 2019</i></span>
        </div>
    </footer>
    <!-- #endregion -->
</body>
</html>
