
@{
    Layout = null;
}

<!DOCTYPE html>
@model List<MusicalLife.Models.Track>
<html>
<body>
    <div class="row" style="width:100%">
        @*<div class="col-md-2 filters">
                FILTERS PLACEHOLDER
            </div>*@
        <div class="col">
            <div class="container-fluid">
                <h3>Rock</h3>
                <hr class="line" />

                <div class="card-deck genreHeader">
                    @{
                        foreach (var item in Model)
                        {
                            if (item.Genre == "Rock")
                            {
                                <div class="card cardSize">
                                    <div class="card-header" style="text-align:center"><img class="card-img-top cardImg" src="@item.ImageUrl" alt="Card image"></div>
                                    <div class="card-body">
                                        <p>Performer: @item.Performer</p>
                                        <p>Album: @item.Album</p>
                                        <p>Release Date: @item.ReleaseDate.Day/@item.ReleaseDate.Month/@item.ReleaseDate.Year</p>
                                        <p>Genre: @item.Genre</p>
                                    </div>
                                    <div class="card-footer" style="text-align:center">
                                        <row>
                                            <a class="btn btn-primary" asp-controller="home" asp-action="Details" asp-route-trackID="@item.TrackID">Details</a>
                                            <a class="btn btn-primary" style="margin-left: 10px; margin-right:10px;" asp-controller="home" asp-action="AddToCart" asp-route-trackID="@item.TrackID">Add to cart</a>
                                        </row>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>

                <h3>Jazz</h3>
                <hr class="line" />
