
@{
    Layout = null;
}

<!DOCTYPE html>
@model List<MusicalLife.Models.Track>
<html>
<body>
    <div class="row" style="width:100%">
        <div class="col-md-2 filters">
            FILTERS PLACEHOLDER
        </div>
        <div class="col">
            <div class="container-fluid">
                <h3>Rock</h3>
                <hr class="line" />

                <div class="card-deck genreHeader">
                    @{
                        foreach (var item in Model)
                        {

                            <div class="card">
                                <div class="card-header">IMAGE</div>
                                <div class="card-body">
                                    <p>Performer: @item.Performer</p>
                                    <p>Album: @item.Album</p>
                                    <p>Release Date: @item.ReleaseDate.Day/@item.ReleaseDate.Month/@item.ReleaseDate.Year</p>
                                    <p>Genre: @item.Genre</p>
                                </div>
                                <div class="card-footer">
                                    <row>
                                        <a class="btn btn-primary" asp-controller="home" asp-action="Details" asp-route-trackID="@item.TrackID">Details</a>
                                        <button class="btn btn-primary">Add to cart</button>
                                    </row>
                                </div>
                            </div>

                        }
                    }
                </div>
                <div>
                    <a class="btn btn-primary" asp-controller="home" asp-action="CreateTrack" >TEST</a>
                </div>

                <h3>Jazz</h3>
                <hr class="line" />
                <div class="card-deck genreHeader">
                    @{
                        foreach (var item in Model)
                        {
                            if (item.Genre == "Jazz")
                            {
                                <div class="card">
                                    <div class="card-header">IMAGE</div>
                                    <div class="card-body">
                                        <p>Performer: @item.Performer</p>
                                        <p>Album: @item.Album</p>
                                        <p>Release Date: @item.ReleaseDate.Day/@item.ReleaseDate.Month/@item.ReleaseDate.Year</p>
                                        <p>Genre: @item.Genre</p>
                                    </div>
                                    <div class="card-footer">
                                        <row>
                                            <a class="btn btn-primary" asp-controller="home" asp-action="Details" asp-route-trackID="@item.TrackID">Details</a>
                                            <button class="btn btn-primary">Add to cart</button>
                                        </row>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>

                <h3>Country</h3>
                <hr class="line" />
                <div class="card-deck genreHeader">
                    @{
                        foreach (var item in Model)
                        {
                            if (item.Genre == "Country")
                            {
                                <div class="card">
                                    <div class="card-header">IMAGE</div>
                                    <div class="card-body">
                                        <p>Performer: @item.Performer</p>
                                        <p>Album: @item.Album</p>
                                        <p>Release Date: @item.ReleaseDate.Day/@item.ReleaseDate.Month/@item.ReleaseDate.Year</p>
                                        <p>Genre: @item.Genre</p>
                                    </div>
                                    <div class="card-footer">
                                        <row>
                                            <a class="btn btn-primary" asp-controller="home" asp-action="Details" asp-route-trackID="@item.TrackID">Details</a>
                                            <button class="btn btn-primary">Add to cart</button>
                                        </row>
                                    </div>
                                </div>
                            }
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
